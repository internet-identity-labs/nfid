  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@nfid/typescript-config": "*",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "dotenv-cli": "latest"
  },
  "workspaces": [
    "config/*",
    "docs",
    "examples/*",
    "packages/*"
  ]
