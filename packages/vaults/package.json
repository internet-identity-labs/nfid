{
  "name": "@nfid/vaults",
  "version": "0.0.4-alpha.7",
  "description": "Software Development Kit to interact with NFID Vaults",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest --passWithNoTests",
    "lint:check": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "keywords": [
    "vault",
    "NFID"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.0",
    "chai": "^5.1.1",
    "esbuild": "0.21.4",
    "ethers": "6.12.2",
    "ictool": "^1.1.1",
    "mocha": "^10.4.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "wrap-ansi": "^9.0.0"
  },
  "dependencies": {
    "simple-cbor": "^0.4.1"
  },
  "peerDependencies": {
    "@dfinity/agent": ">=1.0.1 || <0.20.0-beta.0",
    "@dfinity/candid": ">=1.0.1 || <0.20.0-beta.0",
    "@dfinity/identity": ">=1.0.1 || <0.20.0-beta.0",
    "@dfinity/principal": ">=1.0.1 || <0.20.0-beta.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/internet-identity-labs/nfid"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx} !(**/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
