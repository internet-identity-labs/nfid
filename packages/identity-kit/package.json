{
  "name": "@nfid/identity-kit",
  "author": "Philipp Litzenberger",
  "version": "0.0.0-alpha.0",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./react": "./src/libs/react/index.ts",
    "./react/styles.css": "./src/libs/react/styles.css"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "rollup -c --bundleConfigAsCjs --watch",
    "build": "npm run rollup",
    "post:build": "node ./scripts/frankBuild.js",
    "rollup": "rollup -c --bundleConfigAsCjs",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --fix --ext ts,tsx --max-warnings 0",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/react-lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@nfid/postmessage-rpc": "*",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/themes": "^2.0.3",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.6",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-rename": "^1.0.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "size-limit": "^11.0.2",
    "storybook": "^7.6.12",
    "next-themes": "^0.2.1"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
